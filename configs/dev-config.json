{
  "logger": {
    "level": "debug",
    "timestamp_format": "15:04:05",
    "formatter": {
      "package": true,
      "file": true,
      "base_name_only": true
    },
    "rotor": {
      "filename": "logs/app.log",
      "max_size": 100
    }
  },
  "webserver": {
    "listen": ":80",
    "tls": {
      "enabled": false
    }
  },
  "api": {
    "auth_method": "jwt",
    "listen": ":8080"
  },
  "database": {
    "driver_name": "mysql"
  }
}
